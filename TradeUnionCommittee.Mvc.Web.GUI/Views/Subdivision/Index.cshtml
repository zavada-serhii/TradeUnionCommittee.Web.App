@model IEnumerable<TradeUnionCommittee.BLL.DTO.SubdivisionDTO>
@{
    ViewData["Title"] = "Index";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="row">
                <a asp-controller="Home" asp-action="Directory" class="back-link">Повернутися</a>
                <hr />
                <div class="form-group">
                    <a asp-action="Create" class="btn btn-success">Додати структурний підрозділ</a>
                </div>
            </div>
            <div class="row main-block">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Назва
                            </th>

                            <th>
                                Aбревіатура
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (TempData["ErrorsList"] == null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @item.Abbreviation
                                    </td>

                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"></button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" asp-action="UpdateName" asp-route-id="@item.HashIdMain">Редагувати назву</a>
                                                <a class="dropdown-item" asp-action="UpdateAbbreviation" asp-route-id="@item.HashIdMain">Редагувати абревіатуру</a>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.HashIdMain">Підрозділи</a>
                                                <a class="dropdown-item" asp-action="CreateSubordinate" asp-route-id="@item.HashIdMain">Додати підрозділ</a>
                                                <a class="dropdown-item" asp-action="Restructuring" asp-route-id="@item.HashIdMain">Реструктуризація</a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.HashIdMain">Видалити</a>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>