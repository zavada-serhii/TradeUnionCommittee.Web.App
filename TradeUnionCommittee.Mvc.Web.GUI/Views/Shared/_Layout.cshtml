<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - ППО ОНУ ім. І.І.Мечникова</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/css/libs.min.css"/>
        <link rel="stylesheet" href="~/css/site.min.css"/>
        <link rel="stylesheet" href="~/lib/jquery-editable-select/jquery-editable-select.min.css"/>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/libs.min.css" asp-append-version="true">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/jquery-editable-select/jquery-editable-select.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous" asp-append-version="true">
    </environment>
</head>
<body>
    
<nav class="navbar navbar-expand-lg fixed-top bg-dark navbar-dark">
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample08" aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Links -->
    <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
        
        <ul class="navbar-nav">

            @if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Create">Додати співробітника</a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Directory">Довідники</a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Index">Користувачі</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Аналітика</a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Search" asp-action="Index">Пошуки</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignOut">Вийти</a>
            </li>

        </ul>
    </div>
</nav>

<div class="container body-content">
    <br>
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; ППО ОНУ ім. І.І. Мечникова - @DateTime.Now.Year</p>
    </footer>
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-editable-select/jquery-editable-select.min.js"></script>
    <script src="~/lib/jquery-masked-input/jquery.maskedinput.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/popper/umd/popper.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-editable-select/jquery-editable-select.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-masked-input/jquery.maskedinput.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>
@RenderSection("Scripts", required: false)
</body>
</html>