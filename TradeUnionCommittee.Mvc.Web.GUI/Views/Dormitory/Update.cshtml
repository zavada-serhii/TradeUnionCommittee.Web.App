@model TradeUnionCommittee.ViewModels.ViewModels.UpdateDormitoryViewModel
@{
    ViewData["Title"] = "Редагування гуртожитку";
    Layout = "_Layout";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">

            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h1>Редагування гуртожитку</h1>
                </div>
            </div>
            <hr>
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="HashId" type="hidden" />
                <input type="hidden" asp-for="RowVersion" />

                <div class="row">

                    <div class="form-group col-lg-4 col-xl-4">
                        <label asp-for="NumberDormitory" class="info-label">Номер гутожитку</label>
                        <input asp-for="NumberDormitory" class="form-control" />
                        <span asp-validation-for="NumberDormitory" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-4 col-xl-4">
                        <label asp-for="City">Місто</label>
                        <input asp-for="City" type="text" class="form-control">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-4 col-xl-4">
                        <label asp-for="Street">Вулиця</label>
                        <input asp-for="Street" type="text" class="form-control">
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">
                    <div class="form-group col-lg-4 col-xl-4">
                        <label asp-for="NumberHouse">Номер дому</label>
                        <input asp-for="NumberHouse" type="text" class="form-control">
                        <span asp-validation-for="NumberHouse" class="text-danger"></span>
                    </div>
                </div>


                <div class="row justify-content-between">
                    <div class="form-group col-lg-3">
                        <div>
                            <a asp-action="Index">Повернутися</a>
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <input type="submit" value="Зберегти" class="btn btn-success btn-default" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</section>